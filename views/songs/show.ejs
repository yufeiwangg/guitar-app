<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Your Song: <%= song.song %></h1>
    <p>Difficulty: <%= song.difficulty%></p>
    <form action="/songs/<%= song._id %>/update" method="POST">
      <label>Song:
          <input type="text" name="song">
      </label></br>
      <label>Difficulty:
          <input type="number" name="difficulty">
      </label></br>
          <input type="submit" value="Update Song!">
  </form>
    <a href="/songs/<%= song._id %>/practice">Add practice</a>
    <h1>Time Practiced:</h1>
    <% if (song.timePracticed.length) { %>
        <table>
          <thead>
            <tr>
              <th>Hours</th>
              <th>Minutes</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% song.timePracticed.forEach(function(t) { %>
              <tr>
                <td><%= t.hours %></td>
                <td><%= t.minutes %></td>
                <td><%= t.date %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <h5>No Practices Yet</h5>
      <% } %>

</body>
</html>